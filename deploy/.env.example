# Environment configuration for The Zoo deployment
# Copy to .env and customize for your deployment

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Instance Configuration
INSTANCE_NAME_PREFIX=zoo
MACHINE_TYPE=e2-standard-2

# Repository Configuration
GITHUB_REPO=https://github.com/yourusername/the_zoo.git
GITHUB_BRANCH=main

# Security Configuration
# Comma-separated list of allowed IPs for proxy access
ALLOWED_IPS=0.0.0.0/0

# Zoo Configuration (optional overrides)
ZOO_PROXY_PORT=3128
ZOO_PROJECT_NAME=thezoo

# Multiple Instance Management
# Use these for deploying multiple environments
ZOO_ENV=dev  # dev, staging, prod
ZOO_INSTANCE_SUFFIX=${ZOO_ENV}